<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingBottom="16dp"
        tools:context="com.example.apurba.disaster.disasterreport.FloodDetailsActivity">


        <!-- ea_areaname_text -->
        <LinearLayout
            android:id="@+id/ea_areaname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Geographical Area" />

            <TextView
                android:id="@+id/ea_areaname_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="name" />
        </LinearLayout>


        <!-- ea_county_text -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_below="@id/ea_areaname_text"
            android:id="@+id/county_text_holder"
            android:layout_width="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foold Area"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/county_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="County" />

        </LinearLayout>


        <!-- ea_CardView_layout -->
        <LinearLayout
            android:id="@+id/card_holder"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@id/county_text_holder"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="8dp">

                <TextView
                    android:id="@+id/severityLevel_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Severity Level" />

                <TextView
                    android:id="@+id/severity_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Severity" />

            </android.support.v7.widget.CardView>


        </LinearLayout>


        <!-- ea_river_text -->
        <LinearLayout
            android:id="@+id/river_text_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_holder"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="River/Sea" />

            <TextView
                android:id="@+id/river_or_sea_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="riveName" />
        </LinearLayout>


        <!-- ea_timeRaised_text -->
        <LinearLayout
            android:id="@+id/time_raised_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/river_text_holder"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Raised" />

            <TextView
                android:id="@+id/time_raised_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Time raised" />
        </LinearLayout>



        <!-- ea_CardView_layout -->
        <LinearLayout
            android:id="@+id/card_holder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@id/time_raised_holder"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Message" />

                    <TextView
                        android:id="@+id/mesgga_text_field"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Mesaage Value" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


        <com.facebook.share.widget.ShareButton
            android:id="@+id/fb_share_button"
            android:layout_width="83dp"
            android:layout_height="35dp"
            android:layout_below="@id/card_holder2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary" />
    </RelativeLayout>
</ScrollView>
